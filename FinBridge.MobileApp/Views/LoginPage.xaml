<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FinBridge.MobileApp.Views.LoginPage"
             Title="Login">

    <StackLayout Padding="20">
        <Entry x:Name="UsernameEntry" Placeholder="Username" />
        <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True" />
        <Button Text="Sign In" Clicked="OnSignInClicked"/>
        <Label x:Name="ErrorLabel" TextColor="Red" IsVisible="False"/>
        <Button Text="Don't have an account? Sign up" Clicked="OnSignUpClicked"/>
    </StackLayout>
</ContentPage>
